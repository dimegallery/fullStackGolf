<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>

    {{> menu}}
    {{#thisTeam}}
    <h2>Input Scores</h2>
    <h3>Team Number {{teamNumber}}</h3>

    <form action="/input-score" method="POST">
      <input type="text" name="playerName1" placeholder="Enter Player Name" value="{{APlayer}}" />
      No show? <input type="checkbox" name="onePlayed" value="false"/>
      <input type="text" name="score1" placeholder="Enter Score" />
      <input type="hidden" name="aPlayerQuota" value="{{APlayerQuota}}" />

      <input type="text" name="playerName2" placeholder="Enter Player Name" value="{{BPlayer}}" />
      No show? <input type="checkbox" name="twoPlayed" value="false"/>
      <input type="text" name="score2" placeholder="Enter Score" />
      <input type="hidden" name="bPlayerQuota" value="{{BPlayerQuota}}" />

      <input type="text" name="opposition" placeholder="Enter Opposing Team #"/>
      <input type="hidden" name="teamNumber" value="{{teamNumber}}" />
      <button type="submit">submit</button>
      </form>

    {{/thisTeam}}








    {{message}}

  </body>
</html>
