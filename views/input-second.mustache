<html>
<head>
  <!-- Required meta tags -->
  {{> meta}}
  <link rel="stylesheet" href="/styles/scoresin.css">
  <title>Input Scores</title>
</head>
  <body>
    <!-- navbar partial -->
    {{> menu}}
    <div class="inputCard">
      <div id="cardSize" class="card text-center">
        <div class="card-body">
          <h2 class="card-title">Input Scores</h2>
          <div class="card-text">
            <div><hr><br>
              {{#otherTeam}}
              {{#date}}
              <h4>Team Number {{teamNumber}}</h4>
              <h4>Date Of Game: {{date}}</h4>
              <form class="form" action="/input-second" method="POST">
                <input type="hidden" name="t1APlayer" value="{{t1APlayer}}"/>
                <input type="hidden" name="t1APlayerName" value="{{t1APlayer.name}}"/>
                <input type="hidden" name="t1TeamNumber" value="{{t1APlayer.teamNumber}}"/>
                <input type="hidden" name="t1APlayerQuota": value="{{t1APlayer.quota}}" />
                <input type="hidden" name="t1APlayerOverUnder" value="{{t1APlayer.overUnder}}" />
                <input type="hidden" name="t1APlayerPlayed" value="{{t1APlayer.played}}"/>
                <input type="hidden" name="origAPlayer" value="{{APlayer}}" />

                <input type="hidden" name="t1BPlayerName" value="{{t1BPlayer.name}}"/>
                <input type="hidden" name="t1BPlayerQuota" value="{{t1BPlayer.quota}}" />
                <input type="hidden" name="t1BPlayerOverUnder" value="{{t1BPlayer.overUnder}}" />
                <input type="hidden" name="t1BPlayerPlayed" value="{{t1BPlayer.played}}"/>
                <input type="hidden" name="origBPlayer" value="{{BPlayer}}" />
                <br><h5>Player One:</h5>
                <div class="form-group">
                  <input type="text" name="playerName1" class="form-control" value="{{APlayer}}" placeholder="Player One Name" />
                  <p>No show? <input type="checkbox" name="threePlayed" value="false"/></p>
                </div>
                <div class="form-group">
                  <input type="text" name="score1" class="form-control" placeholder="Enter Score" />
                  <p>Quota {{APlayerQuota}}</p>
                </div>
                <input type="hidden" name="aPlayerQuota" value="{{APlayerQuota}}" />
                <br><h5>Player Two:</h5>
                <div class="form-group">
                  <input type="text" name="playerName2" class="form-control" value="{{BPlayer}}" placeholder="Player Two Name" />
                  <p>No show? <input type="checkbox" name="fourPlayed" value="false"/></p>
                </div>
                <div class="form-group">
                  <input type="text" name="score2" class="form-control" placeholder="Enter Score" />
                  <p>Quota {{BPlayerQuota}}</p>
                </div>
                <input type="hidden" name="bPlayerQuota" value="{{BPlayerQuota}}" />
                <input type="hidden" name= "teamNumber" value="{{teamNumber}}"/>
                <input type="hidden" name="date" value="{{date}}"/>
                <button type="submit" class="btn btn-link">Submit &raquo;</button>
              </form>
              {{/date}}
            {{/otherTeam}}
          </div>
        </div>
      </div>
    </div>
  </div>
  {{> script}}
</body>
</html>
